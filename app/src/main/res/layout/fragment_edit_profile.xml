                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/register_hint_name"

                        android:inputType="textEmailAddress"
                       />

                </com.google.android.material.textfield.TextInputLayout>

