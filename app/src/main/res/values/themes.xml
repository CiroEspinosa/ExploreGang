<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExploreGang" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logo</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PM_Button.OutlinedButton.Primary">
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
    </style>

    <style name="PM_Button.OutlinedButton.Secondary">
        <item name="android:textColor">@color/secondary</item>
        <item name="strokeColor">@color/secondary</item>
    </style>
    <style name="PM_Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">-0.0001</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/transparent</item>

    </style>
    <style name="PM_Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">-0.0001</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">100dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="PM_Button.IconButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="cornerRadius">7dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textEnd</item>
    </style>
    <style name="PM_Button.IconButton.Primary">
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="iconTint">@color/logo</item>
    </style>
    <style name="Theme.ExploreGang.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="styleTextLarge" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.ExploreGang.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExploreGang.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>